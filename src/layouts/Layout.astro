---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import "../styles/main.css"


const { title, author, date, description, image, imageALT, imageSrcset } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <!--NOTE - Google Fonts -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <!--NOTE - Mailchimp style sheet -->

    <link
      href="//cdn-images.mailchimp.com/embedcode/classic-071822.css"
      rel="stylesheet"
      type="text/css"
    />

    <title>{title}</title>
  </head>
  <body class="content__bg" >

    <Header></Header>
    <main class="main-content-wrapper" >
      <article>
        <section id="hero-section">
          <div class="hero-section__cva">
            <img
              class="hero__image"
              alt={imageALT}
              loading="lazy"
              src={image}
              sizes="(max-width:780px) 100vw, 780px"
              srcset={imageSrcset}
            />
            <div class="hero__title-background">
              <div class="hero__title-wrapper">
                <h1>{title}</h1>
                <p class="author-credit">
                  By: {author}<span class="author-credit__date"
                    >Date: {date}</span
                  >
                </p>
              </div>
            </div>
          </div>
          <p>{description} </p>
        </section>
        <slot><slot />
      </article>
      <Footer></Footer>
    </main>
  </body>
</html>

